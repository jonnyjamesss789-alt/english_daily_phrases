name: Daily English Phrase

on:
  schedule:
    # Время в формате Cron (UTC). 
    # Москва = UTC+3.
    # 6:00 UTC = 9:00 МСК
    # 15:00 UTC = 18:00 МСК
    - cron: '0 6,15 * * *'
  
  # Чтобы можно было запустить вручную кнопку для теста
  workflow_dispatch:

jobs:
  run-bot:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.9'

      - name: Install dependencies
        run: pip install -r requirements.txt

      - name: Run script
        env:
          BOT_TOKEN: ${{ secrets.BOT_TOKEN }}
          CHANNEL_ID: ${{ secrets.CHANNEL_ID }}
          OPENROUTER_API_KEY: ${{ secrets.OPENROUTER_API_KEY }}
        run: python main.py
